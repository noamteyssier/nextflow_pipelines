
/*
	Wynton Specific Parameters
*/
params {

	data_dir = "${HOME}/bin/nextflow_pipelines/data/pf_meta/"

	reads = "samples/*_R{1,2}.fastq.gz"

	reference = data_dir.concat("genome/Pfalciparum.genome.fasta")

	known_sites = data_dir.concat("vcf/pf3k_snps.vcf.gz")

	interval_list = data_dir.concat("intervals/contigs.interval_list")

	regions = data_dir.concat("intervals/contigs.regions")

	outdir = "results"

	threads = 8

}

/*
	Wynton Specific Process Config
*/

process {

	executor = "sge"

	scratch = true

	stageInMode = "copy"

	stageOutMode = "move"

	errorStrategy = "retry"

	module = "CBI:bwa:samtools:bcftools:gatk"

}

// keep trace
trace {

	enabled = true

	file = "${params.outdir}/trace.txt"

}

// keep report
report {

	enabled = true

	file = "${params.outdir}/report.html"

}
